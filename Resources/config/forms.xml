<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Form Extensions -->
        <service id="oneup.contao_form_extension.text" class="Oneup\ContaoFormBundle\Form\Extension\Type\TextExtension" public="false">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\TextType" />
        </service>

        <service id="oneup.contao_form_extension.textarea" class="Oneup\ContaoFormBundle\Form\Extension\Type\TextareaExtension" public="false">
            <argument type="service" id="contao_framework" />
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\TextareaType" />
        </service>

        <service id="oneup.contao_form_extension.checkbox" class="Oneup\ContaoFormBundle\Form\Extension\Type\CheckboxExtension" public="false">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\CheckboxType" />
        </service>

        <service id="oneup.contao_form_extension.choice" class="Oneup\ContaoFormBundle\Form\Extension\Type\ChoiceExtension" public="false">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\ChoiceType" />
        </service>
    </services>
</container>